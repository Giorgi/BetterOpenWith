<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aboutmycode.openwith.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.aboutmycode.openwith.app.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aboutmycode.openwith.app.FileHandlerActivity"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_file_handler"
            android:theme="@android:style/Theme.Holo.Dialog"></activity>

        <activity-alias
            android:name="com.aboutmycode.openwith.app.PdfFileHandlerActivity"
            android:targetActivity="com.aboutmycode.openwith.app.FileHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="application/pdf" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="*"
                    android:pathPattern=".*\\.pdf"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:pathPattern=".*\\.pdf"
                    android:scheme="https" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="com.aboutmycode.openwith.app.VideoFileHandlerActivity"
            android:targetActivity="com.aboutmycode.openwith.app.FileHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="video/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.aaf" />
                <data android:pathPattern=".*\\.3gp" />
                <data android:pathPattern=".*\\.avi" />
                <data android:pathPattern=".*\\.flv" />
                <data android:pathPattern=".*\\.mpg" />
                <data android:pathPattern=".*\\.mpeg" />
                <data android:pathPattern=".*\\.mkv" />
                <data android:pathPattern=".*\\.mov" />
                <data android:pathPattern=".*\\.ogg" />
                <data android:pathPattern=".*\\.wmv" />
                <data android:pathPattern=".*\\.ts" />
                <data android:pathPattern=".*\\.gvp" />
                <data android:pathPattern=".*\\.ogm" />
                <data android:pathPattern=".*\\.ogv" />
                <data android:pathPattern=".*\\.3ga" />
                <data android:pathPattern=".*\\.3gp2" />
                <data android:pathPattern=".*\\.webm" />
                <data android:pathPattern=".*\\.rm" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="com.aboutmycode.openwith.app.VideoStreamHandlerActivity"
            android:targetActivity=".FileHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:mimeType="video/*" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="com.aboutmycode.openwith.app.ImageFileHandlerActivity"
            android:targetActivity="com.aboutmycode.openwith.app.FileHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.gif" />
                <data android:pathPattern=".*\\.jpeg" />
                <data android:pathPattern=".*\\.jpg" />
                <data android:pathPattern=".*\\.png" />
                <data android:pathPattern=".*\\.bmp" />
                <data android:pathPattern=".*\\.webp" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="com.aboutmycode.openwith.app.AudioFileHandlerActivity"
            android:targetActivity="com.aboutmycode.openwith.app.FileHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="audio/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.3gp" />
                <data android:pathPattern=".*\\.mp3" />
                <data android:pathPattern=".*\\.wma" />
                <data android:pathPattern=".*\\.wav" />
                <data android:pathPattern=".*\\.rm" />
                <data android:pathPattern=".*\\.mid" />
                <data android:pathPattern=".*\\.ogg" />
                <data android:pathPattern=".*\\.midi" />
                <data android:pathPattern=".*\\.mpa" />
            </intent-filter>
        </activity-alias>
        <activity-alias
            android:name="com.aboutmycode.openwith.app.AudioStreamHandlerActivity"
            android:targetActivity=".FileHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:mimeType="audio/*" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="com.aboutmycode.openwith.app.settings.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>